@model RevisionViewModel

<h1>@Model.Title</h1>

<p class="item-label">
    Answer:
</p>

<table style="width: 100%;">
    <tbody>
        <tr>
            <td class="single-column">
                @switch (Model.Question.CorrectAnswer)
                {
                    case 1:
                        @Html.DisplayFor(m => m.Question.Answer1)
                        break;
                    case 2:
                        @Html.DisplayFor(m => m.Question.Answer2)
                        break;
                    case 3:
                        @Html.DisplayFor(m => m.Question.Answer3)
                        break;
                    case 4:
                        @Html.DisplayFor(m => m.Question.Answer4)
                        break;
                }
            </td>
        </tr>
        <tr>
            <td class="single-column">
                <p class="item-label">
                    Reference:
                </p>
            </td>
        </tr>
        <tr>
            <td class="single-column">
                @Html.DisplayFor(m => m.Question.Reference)
            </td>
        </tr>
        <tr>
            <td class="single-column">
                <button type="button" id="btnnext" onclick="location.href='@Url.Action("Index","FlashCard", new { record = Model.Question.Id })'" class="btn">Next question</button>
            </td>
        </tr>
    </tbody>
</table>
