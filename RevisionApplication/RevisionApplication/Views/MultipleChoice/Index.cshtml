@model RevisionViewModel

<h1>@Model.Title</h1>

@using (Html.BeginForm("Index", "MultipleChoice", FormMethod.Post))
{
    <table style="width: 100%;">
        <tbody>
            <tr>
                <td colspan="2" class="single-column">
                    <p class="item-label">
                        Question:
                    </p>
                </td>
            </tr>
            <tr>
                <td colspan="2" class="single-column">
                    @Html.Display("Question.Content")
                </td>
            </tr>
            <tr>
                <td colspan="2" style="border-bottom: 1px solid #000000; "></td>
            </tr>
            <tr>
                <td class="single-column left-2-col">
                    Answer 1: @Html.RadioButtonFor(m => m.ChosenAnswer, 1)
                </td>
                <td class="single-column right-2-col">
                    @Html.Display("Question.Answer1")
                </td>
            </tr>
            <tr>
                <td colspan="2" style="border-bottom: 1px solid #000000; "></td>
            </tr>
            <tr>
                <td class="single-column left-2-col">
                    Answer 2: @Html.RadioButtonFor(m => m.ChosenAnswer, 2)
                </td>
                <td class="single-column right-2-col">
                    @Html.Display("Question.Answer2")
                </td>
            </tr>
            <tr>
                <td colspan="2" style="border-bottom: 1px solid #000000; "></td>
            </tr>
            <tr>
                <td class="single-column left-2-col">
                    Answer 3: @Html.RadioButtonFor(m => m.ChosenAnswer, 3)
                </td>
                <td class="single-column right-2-col">
                    @Html.Display("Question.Answer3")
                </td>
            </tr>
            <tr>
                <td colspan="2" style="border-bottom: 1px solid #000000; "></td>
            </tr>
            <tr>
                <td class="single-column left-2-col">
                    Answer 4: @Html.RadioButtonFor(m => m.ChosenAnswer, 4)
                </td>
                <td class="single-column right-2-col">
                    @Html.Display("Question.Answer4")
                </td>
            </tr>
            <tr>
                <td colspan="2" class="single-column">
                    <input value="Submit" id="btnsubmit" type="submit" class="btn">
                </td>
            </tr>
        </tbody>
    </table>

    @Html.Hidden("Question.Id")
    @Html.Hidden("Title")
    @Html.Hidden("Question.Content")
    @Html.Hidden("Question.Answer1")
    @Html.Hidden("Question.Answer2")
    @Html.Hidden("Question.Answer3")
    @Html.Hidden("Question.Answer4")
    @Html.Hidden("Question.CorrectAnswer")
    @Html.Hidden("Question.Reference")
}




