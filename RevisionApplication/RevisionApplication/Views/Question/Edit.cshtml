@model QuestionViewModel

<h1>@Model.Title</h1>

@using (Html.BeginForm("Edit", "Question", FormMethod.Post))
{
<table style="width: 100%;">
    <tbody>
        <tr>
            <td>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            </td>
        </tr>
        <tr>
            <td class="single-column left-2-col">
                @Html.DisplayNameFor(m => m.Content)
            </td>
            <td class="single-column right-2-col">
                @Html.TextAreaFor(m => m.Content, new { @class = "area" })
                @Html.ValidationMessageFor(m => m.Content)
            </td>
        </tr>
        <tr>
            <td class="single-column left-2-col">
                @Html.DisplayNameFor(m => m.Answer1)
            </td>
            <td class="single-column right-2-col">
                @Html.TextAreaFor(m => m.Answer1, new { @class = "area" })
                @Html.ValidationMessageFor(m => m.Answer1)
            </td>
        </tr>
        <tr>
            <td class="single-column left-2-col">
                @Html.DisplayNameFor(m => m.Answer2)
            </td>
            <td class="single-column right-2-col">
                @Html.TextAreaFor(m => m.Answer2, new { @class = "area" })
                @Html.ValidationMessageFor(m => m.Answer2)
            </td>
        </tr>
        <tr>
            <td class="single-column left-2-col">
                @Html.DisplayNameFor(m => m.Answer3)
            </td>
            <td class="single-column right-2-col">
                @Html.TextAreaFor(m => m.Answer3, new { @class = "area" })
                @Html.ValidationMessageFor(m => m.Answer3)
            </td>
        </tr>
        <tr>
            <td class="single-column left-2-col">
                @Html.DisplayNameFor(m => m.Answer4)
            </td>
            <td class="single-column right-2-col">
                @Html.TextAreaFor(m => m.Answer4, new { @class = "area" })
                @Html.ValidationMessageFor(m => m.Answer4)
            </td>
        </tr>
        <tr>
            <td class="single-column left-2-col">
                @Html.DisplayNameFor(m => m.CorrectAnswer)
            </td>
            <td class="single-column right-2-col">
                1: @Html.RadioButtonFor(m => m.CorrectAnswer, 1) 2: @Html.RadioButtonFor(m => m.CorrectAnswer, 2) 3: @Html.RadioButtonFor(m => m.CorrectAnswer, 3) 4: @Html.RadioButtonFor(m => m.CorrectAnswer, 4)
                @Html.ValidationMessageFor(m => m.CorrectAnswer)
            </td>
        </tr>
        <tr>
            <td class="single-column left-2-col">
                @Html.DisplayNameFor(m => m.SelectedUnit)
            </td>
            <td class="single-column right-2-col">
                @Html.DropDownListFor(m => m.SelectedUnit,
                new SelectList(Model.Units),
                "Select Unit")
            </td>
        </tr>
        <tr>
            <td class="single-column left-2-col">
                @Html.DisplayNameFor(m => m.Reference)
            </td>
            <td class="single-column right-2-col">
                @Html.TextAreaFor(m => m.Reference, new { @class = "area" })
                @Html.ValidationMessageFor(m => m.Reference)
            </td>
        </tr>
        <tr>
            <td colspan="2" class="single-column">
                <input value="Save" id="btnsave" type="submit" class="btn">
            </td>
        </tr>
    </tbody>
</table>

@Html.HiddenFor(model => model.Id)
<div>
    <a asp-action="Index">Back to List</a>
</div>
}